<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.isaacdjl.disco">

    <application
        android:fullBackupContent="@xml/backup_rules"
        android:name=".application.DiscoApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.main.FeedActivity"/>
        <activity android:name=".ui.intro.MainIntroActivity" android:theme="@style/Theme.Intro"
            android:screenOrientation="fullSensor"/>
        <activity android:name=".ui.launch.LaunchActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
    </application>

</manifest>